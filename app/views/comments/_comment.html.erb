<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 40), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp form-inline">
      <span class="comment-time">Posted <%= time_ago_in_words(comment.created_at) %> ago.</span>
      <% if current_user?(comment.user) %>
        <%= render 'comments/delete', comment: comment %>
      <% end %>
  </span>
</li>

