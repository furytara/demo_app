
  <div class="row">
    <aside class="col-md-4">
      <% if logged_in? %>
        <section class="user_info">
          <%= render 'shared/user_info', user: current_user %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="entry_form">
          <%= render 'shared/entry_form' %>
        </section>
      <% else %>
        <%= render 'welcome' %>
      <% end%>
    </aside>
    <div class="col-md-8">
      <h3>Entries feed</h3>
      <%= render 'shared/feed'  %>
    </div>
  </div>



